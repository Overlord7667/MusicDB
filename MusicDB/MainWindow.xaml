<Window x:Class="MusicDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicDB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox TextChanged="textBox1_TextChanged" x:Name="textBox1"></TextBox>
        <ListBox SelectionChanged="listBox1_SelectionChanged" x:Name="listBox1" Grid.Row="1"></ListBox>
        <TextBox x:Name="textBox2" Grid.Column="1" TextChanged="textBox2_TextChanged"></TextBox>
        <ListBox x:Name="listBox2" Grid.Column="1" Grid.Row="1" SelectionChanged="listBox2_SelectionChanged"></ListBox>
        <Image x:Name="image" Grid.Row="1" Grid.Column="2"></Image>
    </Grid>
</Window>
